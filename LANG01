  <div class="card">
    <h3>Cek Umur Kartu</h3>
    <input id="nomor" type="text" placeholder="Masukkan Nomor HP">
    <button onclick="cekUmur()">Cek</button>
    <div id="hasil" class="result"></div>
  </div>

<script>
// Animasi LANG BAIK bergerak kanan-kiri
(function animateLogo(){
  const logo=document.getElementById('logo'); let pos=-200,dir=1;
  function step(){
    const max=window.innerWidth-logo.clientWidth-20;
    pos+=dir*2;
    if(pos>=max) dir=-1;
    if(pos<=-200) dir=1;
    logo.style.left=pos+"px";
    requestAnimationFrame(step);
  }
  logo.style.position="absolute"; logo.style.left=pos+"px"; step();
})();

// Deteksi operator sederhana
function detectOperator(num){
  if(num.startsWith("0812")||num.startsWith("0821")) return "Telkomsel";
  if(num.startsWith("0857")||num.startsWith("0815")) return "Indosat";
  if(num.startsWith("0877")||num.startsWith("0817")) return "XL/Axis";
  if(num.startsWith("0895")) return "Tri (3)";
  if(num.startsWith("0881")) return "Smartfren";
  return "Tidak diketahui";
}

// Estimasi tanggal aktivasi deterministik dari nomor
function estimateActivation(num){
  let hash=0;
  for(let i=0;i<num.length;i++){ hash=(hash*31+num.charCodeAt(i))&0xffffffff; }
  const daysAgo=(Math.abs(hash)%2000)+30; // min 1 bulan - max 5 tahun+
  return new Date(Date.now()-daysAgo*24*60*60*1000);
}

function cekUmur(){
  const nomor=document.getElementById("nomor").value.trim();
  if(!nomor){ alert("Isi nomor HP!"); return; }
  const op=detectOperator(nomor);
  const akt=estimateActivation(nomor);

  function update(){
    const now=new Date();
    const diff=now-akt;
    const d=Math.floor(diff/(1000*60*60*24));
    const h=Math.floor((diff/(1000*60*60))%24);
    const m=Math.floor((diff/(1000*60))%60);
    const s=Math.floor((diff/1000)%60);

    document.getElementById("hasil").innerHTML=
      `<b>Nomor:</b> ${nomor}<br>
       <b>Operator:</b> ${op}<br>
       <b>Aktivasi (perkiraan):</b> ${akt.toLocaleDateString("id-ID")}<br>
       <b>Umur Kartu:</b> ${d} hari, ${h}j ${m}m ${s}d`;
  }
  setInterval(update,1000);
  update();
}
</script>
